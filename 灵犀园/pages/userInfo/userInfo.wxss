/* pages/userInfo/userInfo.wxss */
@import '../../utils/wxss/iconfont.wxss';
@import '../../utils/wxss/iconfont2.wxss';
.infoPage{
	background-color: #f4f4f8;
	overflow: hidden;
}

.trouser{
	display: flex;
	justify-content: space-around;
	flex-wrap: wrap;
	align-items: center;
	background-color: white;
  box-shadow: 0 5rpx 5rpx #e5e4e4;
	padding-top: 30rpx;
}
.info{
	display: flex;
	width: 100%;
	flex-direction: row;
	flex-wrap: wrap;
	text-align: center;
}

.info>view{
	width: 100%;
	display: flex;
	justify-content: space-around;
	flex-wrap: wrap;
	line-height: 50rpx;
}

.frist>view{
	width: 33.3%;
	font-size: 36rpx;
	color: #3e3e3e;
}

.frist .infoname{
	font-size: 48rpx;
}

.foot>view{
	width: 33.3%;
	font-size: 24rpx;
	color: #686666;
}

.imgbox{
	width: 100%;
	display: flex;
	justify-content: space-around;
}

.imgbox>view{
	box-shadow: 0 5rpx 5rxp red;
}

.imgbox image{
	width: 140rpx;
	height: 135rpx;
	margin: 30rpx 0;
	border-radius: 10rpx;
}

.self-intro>text{
	margin-left:20rpx;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 26rpx;
	color: #878686;

}

.self-area{
	background-color: white;
	font-size: 24rpx;
	color:#878686;
	padding: 50rpx 25rpx;
	letter-spacing: 3rpx;
	box-shadow: 0 5rpx 5rpx #e5e4e4;
}

.zy{
	display: flex;
	margin: 100rpx 0;
	font-size: 28rpx;
	width: 100%;
	justify-content: center;
	align-items: center;
}

.serve{
	color: #878686;
	margin-left: 30rpx;
}

.attache{
	color: #878686;
	font-size: 28rpx;
}

.update{
	color: white;
	padding: 25rpx 0;
	width: 100%;
	display: flex;
	position: fixed;
	left: 0;
	bottom: 0;
	justify-content: space-around;
	background: white;
	box-shadow: 0rpx -5rpx 5rpx #e5e4e4; 
	font-size: 36rpx;
}

.update button{
	width: 30%;
	background-color:#fb6081;
	border-radius:70rpx; 
	color: white;
	margin: 0;
	padding: 0;
	
}

.update button view{
	line-height: 60rpx;
	height: 60rpx;
}


.update text{
	margin-left: 10rpx;
	font-size:28rpx; 
}

update .xyicon{
	font-size: 32rpx;
}