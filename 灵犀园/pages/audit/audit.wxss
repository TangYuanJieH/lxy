/* pages/audit/audit.wxss */
.preson{
	display: flex;
	justify-content: space-around;
	flex-wrap: wrap;
	height: 130rpx;
	line-height: 130rpx;
	align-items: center;
	background-color: white;
	margin: 15rpx 0;
	box-shadow:0 5rpx 5rpx #e5e4e4;
}

.head{
	width: 15%;
	display: flex;
	align-items: center;
	justify-content: space-around;
}

.head image{
	width: 80rpx;
	height: 80rpx;
	border-radius:50%; 
}

.info{
	display: flex;
	width: 60%;
	flex-direction: row;
	flex-wrap: wrap;
	font-size: 24rpx;
	color: #9e9e9e;
}

.info view{
	width: 30%;
	height: 50rpx;
	text-align: center;
	line-height: 50rpx;
}

.shenhe{
	width: 20%;

}

.shenhe view{
	width: 60%;
	padding: 5rpx 20rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	border: 1px solid lightgrey;
	border-radius: 10rpx;
	font-size: 30rpx;
	color: #9e9e9e;
}