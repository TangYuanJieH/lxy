/* pages/promanage/promanage.wxss */
@import "../../utils/wxss/iconfont.wxss";
@import '../../utils/wxss/iconfont1.wxss';

.headimg {
  height: 190rpx;
}

.headimg image {
  width: 100%;
  height: 190rpx;
}

.mode {
  display: flex;
	width: 100%;
  margin-bottom: 50rpx;
  font-size: 30rpx;
  color: #868585;
  background-color: white;
  box-shadow: 0 5rpx 5rpx #e5e4e4;
  justify-content: space-around;
}

.myLogin {
  height: 130rpx;
  line-height: 130rpx;
  display: flex;
}

.myLogin>view {
  margin: 0 20rpx;
}

.afterLogin{
	height: 130rpx;
	display: flex;
	width: 60%;
	justify-content: space-around;
}

.afterLogin>view{
	display: flex;
	width: 100%;
	align-items: center;
	justify-content: space-between;
}

.afterLogin .quit{
	background-color: #f3a088;
	padding: 4rpx 20rpx;
	border-radius: 40rpx;
	color: white;
	font-size: 28rpx;
	text-align: center;
}

.cs_button {
  height: 130rpx;
  display: flex;
  align-items: center;
  padding: 0;
  background-color: white;
  font-size: 30rpx;
  color: #868585;
}

.cs_button::after {
  border: none;
  border-radius: 0;
}

.cs_button>view {
  margin: 0 20rpx;
}

.second {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  text-align: center;
  margin-bottom: 50rpx;
  font-size: 30rpx;
  color: #868585;
}

.second>view {
  width: 48%;
  height: 190rpx;
  background-color: white;
  margin: 8rpx 0;
  box-shadow: 0 0 10rpx #d6d6d6;
  border-radius: 10rpx;
}

.second>view>view {
  width: 100%;
  margin: 35rpx 0;
}
