<!--pages/login/login.wxml-->
<view>
  <view class='imgBox'>
    <image src='http://pcnuifdw5.bkt.clouddn.com/160946.gif' mode='aspectFit'></image>
  </view>
  <form bindsubmit="formSubmit">
    <view class='login'>
      <view class='box'>
        <text class='iconfont icon-dengluzhanghao'></text>
        <input placeholder='账号' name='phone'></input>
      </view>
      <view class='box'>
        <text class="iconfont icon-mima"></text>
        <input placeholder='密码' name='password'></input>
      </view>
      <view class='myLogin'>
        <button formType="submit">登录</button>
      </view>
    </view>
  </form>
</view>