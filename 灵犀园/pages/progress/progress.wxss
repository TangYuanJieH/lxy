/* pages/progress/progress.wxss */
@import '../../utils/wxss/iconfont.wxss';
.progressPage{
	width: 100%;
	background-color: #f4f4f8;
}

.imgBox image{
	width: 100%;
	height: 360rpx;
}

.progressInfo{
	width: 100%;
	display: flex;
	height: 125rpx;
	font-size: 24rpx;
	margin-top: 10rpx;
	justify-content: space-around;
}

.date{
	width: 20%;
	display: flex;
	justify-content: space-around;
	text-align: center;
	background-color: white;
	align-items: center;
	box-shadow: 0 5rpx 5rpx #e5e4e4;
	border-radius: 10rpx;
}

.inforight{
	width: 70%;
	padding: 0 3%;
	display: flex;
	align-items: center;
	color: #868686;
	background-color: white;
	justify-content: space-between;
	box-shadow: 0 5rpx 5rpx #e5e4e4;
	border-radius: 10rpx;
}

.imgInfo{
	width: 100rpx;
	height: 80rpx;
	border-radius: 80rpx; 
}